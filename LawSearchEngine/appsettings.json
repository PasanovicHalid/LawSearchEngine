{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console", "Serilog.Enrichers.Span" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:o}] [{Level:u3}] [{TraceId}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.log",
          "rollOnFileSizeLimit": true,
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:o}] [{Level:u3}] [{TraceId}] {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName", "WithSpan" ]
  },
  "Elasticsearch": {
    "Url": "http://es01:9200",
    "CertificateThumbprint": "",
    "BasicAuthUsername": "elastic",
    "BasicAuthPassword": "password",
    "IndexFormat": "logstash-{0:yyyy.MM.dd}"
  },
  "Minio": {
    "Url": "http://minio:9000",
    "AccessKey": "",
    "SecretKey": ""
  }
}
